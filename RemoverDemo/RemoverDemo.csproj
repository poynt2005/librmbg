<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\BackgroundRemover\BackgroundRemover.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../librmbg/librmbg.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <TargetPath>librmbg.dll</TargetPath>
    </None>

    <None Include="../venv-package/python3.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <TargetPath>python3.dll</TargetPath>
    </None>

    <None Include="../venv-package/python310.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <TargetPath>python310.dll</TargetPath>
    </None>
  </ItemGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

</Project>
